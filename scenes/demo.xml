<lxs>
    <scene root="root" axis_length="0"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="mainLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="shipHull" file="scenes/images/futuristic_blue.png" />
        <texture id="demoTexture" file="scenes/images/futuristic_blue.png" />
        <texture id="pyramidBricks" file="scenes/images/pyramidBricks.jpg" />
        <texture id="sky" file="scenes/images/sky.jpg" />
        <texture id="desert" file="scenes/images/desert.jpg" />
    </textures>

    <materials>
        <material id="whiteDiffuse" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="blueGlass" shininess="1">
            <emission r="0" g="0" b="1" a="1" />
            <ambient r="0.607" g="0.886" b="0.949" a=".8" />
            <diffuse r="0.607" g="0.886" b="0.949" a=".8" />
            <specular r="0.607" g="0.886" b="0.949" a=".8" />
        </material>

        <material id="greyDiffuse" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.26" g="0.29" b="0.30" a="1.0" />
            <diffuse r=".26" g=".29" b=".30" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="thinCylinder">
            <cylinder top=".15" base=".15" height="1" slices="15" stacks="30" />
        </primitive>
        <primitive id="spaceShipBorder">
            <torus inner = "0.1" outer = "2.5" slices="100" loops="100" />
        </primitive>
        <primitive id="cone">
            <cylinder base="2.5" top="0" height="2.0" slices="15" stacks="30" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="100" stacks="100" />
        </primitive>
        <primitive id="cylinder">
            <cylinder top="3" base="1" height="5" slices="15" stacks="30" />
        </primitive>
        <primitive id="torus">
            <torus inner = "0.1" outer = "0.5" slices="100" loops="100" />
        </primitive>
        <primitive id="pyramidFront">
            <triangle x1="-1" y1="0" z1="1" x2="1" y2="0" z2="1" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="pyramidBack">
            <triangle x1="-1" y1="0" z1="-1" x2="1" y2="0" z2="-1" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="pyramidLeft">
            <triangle x1="-1" y1="0" z1="1" x2="-1" y2="0" z2="-1" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="pyramidRight">
            <triangle x1="1" y1="0" z1="1" x2="1" y2="0" z2="-1" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="skyboxRectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="spaceship" />
                <componentref id="Pyramids" />
                <componentref id="SkyBox"/>
                <componentref id="Floor"/>
            </children>
        </component>

        <component id="Pyramids">
            <transformation>
                <scale x="3" y="3" z="3" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="SmallPyramid"/>
                <componentref id="MediumPyramid"/>
                <componentref id="BigPyramid"/>
            </children>
        </component>

        <component id="Pyramid">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="pyramidBricks" length_s="1" length_t="1" />
            <children>
                <primitiveref id="pyramidFront" />
                <primitiveref id="pyramidBack" />
                <primitiveref id="pyramidLeft" />
                <primitiveref id="pyramidRight" />
            </children>
        </component>

        <component id="spaceship">
            <transformation>
                <translate x="-10" y="21" z="-4" />
                <rotate axis="x" angle="10" />
                <rotate axis="y" angle="15" />
                <rotate axis="x" angle="-90" />
                <scale x="3" y="3" z="3" />
            </transformation>
            <materials>
                <material id="blueGlass" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="sphere" />
                <componentref id="shipBase" />
            </children>
        </component>

        <component id="shipBase">
            <transformation>
                <translate x="0" y="0" z="-1" />
            </transformation>
            <materials>
                <material id="greyDiffuse" />
            </materials>
            <texture id="shipHull" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cone" />
                <primitiveref id="spaceShipBorder" />
                <componentref id="shipBottom" />
                <componentref id="shipLegs" />
            </children>
        </component>

        <component id="shipBottom">
            <transformation>
                <scale x="2.5" y="2.5" z="0.25" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="shipLegs">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="Leg1"/>
                <componentref id="Leg2"/>
                <componentref id="Leg3"/>
            </children>
        </component>

        <component id="Leg1">
            <transformation>
                <rotate axis="z" angle="0" />
                <translate x="1.8" y="0" z="0" />
                <rotate axis="y" angle="-15" /> 
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="shipLeg"/>
            </children>
        </component>

         <component id="Leg2">
            <transformation>
                <rotate axis="z" angle="120" />
                <translate x="1.8" y="0" z="0" />
                <rotate axis="y" angle="-15" /> 
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="shipLeg"/>
            </children>
        </component>

        <component id="Leg3">
            <transformation>
                <rotate axis="z" angle="240" />
                <translate x="1.8" y="0" z="0" />
                <rotate axis="y" angle="-15"/> 
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="shipLeg"/>
            </children>
        </component>


        <component id="shipLeg">
            <transformation>
                <translate x="0" y="0" z="-1" />
            </transformation>
            <materials>
                <material id="greyDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="thinCylinder" />
                <componentref id="shipLegBottom"/>
            </children>
        </component>

        <component id="shipLegBottom">
            <transformation>
                <scale x="0.3" y="0.3" z="0.20" />
            </transformation>
            <materials>
                <material id="greyDiffuse" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="SmallPyramid">
            <transformation>
                <translate x="-1" y="0" z="-3"/>
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="pyramidBricks" length_s="1" length_t="1" />
            <children>
                <primitiveref id="pyramidFront" />
                <primitiveref id="pyramidBack" />
                <primitiveref id="pyramidLeft" />
                <primitiveref id="pyramidRight" />
            </children>
        </component>

        <component id="MediumPyramid">
            <transformation>
                <translate x="-7" y="0" z="-8"/>
                <scale x="3" y="3" z="3"/>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="pyramidBricks" length_s="1" length_t="1" />
            <children>
                <primitiveref id="pyramidFront" />
                <primitiveref id="pyramidBack" />
                <primitiveref id="pyramidLeft" />
                <primitiveref id="pyramidRight" />
            </children>
        </component>

        <component id="BigPyramid">
            <transformation>
                <translate x="-9" y="0" z="2"/>
                <scale x="5" y="5" z="5"/>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="pyramidBricks" length_s="1" length_t="1" />
            <children>
                <primitiveref id="pyramidFront" />
                <primitiveref id="pyramidBack" />
                <primitiveref id="pyramidLeft" />
                <primitiveref id="pyramidRight" />
            </children>
        </component>

        <component id="SkyBox">
            <transformation>
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="sky" length_s="1" length_t="1" />
            <children>
                <componentref id="SkyBoxTop" />
                <componentref id="SkyBoxLeft" />
                <componentref id="SkyBoxRight" />
                <componentref id="SkyBoxBack" />
                <componentref id="SkyBoxFront" />
            </children>
        </component>

        <component id="SkyBoxTop">
            <transformation>
                <translate x="0" y="100" z="0" />
                <rotate axis="x" angle="90" />
                <scale x="100" y="100" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="sky" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skyboxRectangle" />
            </children>
        </component>

        <component id="SkyBoxLeft">
            <transformation>
                <translate x="-50" y="50" z="0" />
                <rotate axis="y" angle="90" />
                <scale x="100" y="100" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="sky" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skyboxRectangle" />
            </children>
        </component>

        <component id="SkyBoxRight">
            <transformation>
                <translate x="50" y="50" z="0" />
                <rotate axis="y" angle="-90" />
                <scale x="100" y="100" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="sky" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skyboxRectangle" />
            </children>
        </component>

        <component id="SkyBoxBack">
            <transformation>
                <translate x="0" y="50" z="50" />
                <rotate axis="y" angle="180" />
                <scale x="100" y="100" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="sky" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skyboxRectangle" />
            </children>
        </component>

        <component id="SkyBoxFront">
            <transformation>
                <translate x="0" y="50" z="-50" />
                <scale x="100" y="100" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="sky" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skyboxRectangle" />
            </children>
        </component>

        <component id="Floor">
            <transformation>
                <translate x="0" y="0" z="0" />
                <rotate axis="x" angle="-90" />
                <scale x="100" y="100" z="1" />
            </transformation>
            <materials>
                <material id="whiteDiffuse" />
            </materials>
            <texture id="desert" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skyboxRectangle" />
            </children>
        </component>

    </components>
</lxs>