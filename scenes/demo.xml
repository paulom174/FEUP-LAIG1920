<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="67" y="50" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.8" g="0.8" b="0.8" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="5" y="5" z="5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="wallTexture" file="scenes/images/darkred.jpg" />
        <texture id="woodTexture" file="scenes/images/wood.jpg" />
        <texture id="doorTexture" file="scenes/images/door.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="0.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="moreDiffuse" shininess="10">
            <emission r="0.5" g="0.5" b="0.5" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0" x2="2" y2="0" z2="0" x3="0" y3="2" z3="0" />
        </primitive>

        <primitive id="demoSphere">
            <sphere radius="1" slices="20" stacks="20" />
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="2" top="2" height="4" slices="20" stacks="20" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Walls" />
                <componentref id="Door" />
 
            </children>
        </component>

        <component id="Walls">
            <transformation>
            </transformation>
            <materials>
                <material id="moreDiffuse" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Wall1" />
                <componentref id="Footer1" />
                <componentref id="Wall2" />
                <componentref id="Footer2" />
                <componentref id="Wall3" />
                <componentref id="Footer3" />
                <componentref id="Wall4" />
                <componentref id="doorFooter1" />
                <componentref id="doorFooter2" />
            </children>
        </component>

        <component id="Wall1">
            <transformation>
                <translate x="10" y="5" z="0" />
                <scale x="20" y="5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="Wall2">
            <transformation>
                <translate x="10" y="5" z="0" />
                <scale x="20" y="5" z="1" />
                <rotate axis="x" angle="180" />
                <translate x="0" y="0" z="-20" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="Wall3">
            <transformation>
                <translate x="0" y="5" z="10" /> 
                <rotate axis="y" angle="90" />
                <scale x="20" y="5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children> 
        </component> 

        <component id="Wall4">
            <transformation>
                <translate x="20" y="5" z="10" />
                <rotate axis="y" angle="-90" />
                <scale x="20" y="5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <!-- Cube -->
        <component id="Cube">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <componentref id="cubePart1" />
                <componentref id="cubePart2" />
                <componentref id="cubePart3" />
                <componentref id="cubePart4" />
                <componentref id="cubePart5" />
                <componentref id="cubePart6" />
            </children>
        </component>

        <component id="cubePart1">
            <transformation>
                <translate x="0.5" y="0.5" z="1" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="cubePart2">
            <transformation>
                <translate x="0" y="1" z="0" />
                <rotate axis="x" angle="180" />
                <translate x="0.5" y="0.5" z="0" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="cubePart3">
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="0.5" y="0.5" z="0" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="cubePart4">
            <transformation>
                <translate x="1" y="0" z="1" />
                <rotate axis="y" angle="90" />
                <translate x="0.5" y="0.5" z="0" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="cubePart5">
            <transformation>
                <translate x="0" y="0" z="0" />
                <rotate axis="x" angle="90" />
                <translate x="0.5" y="0.5" z="0" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="cubePart6">
            <transformation>
                <translate x="0" y="1" z="1" />
                <rotate axis="x" angle="-90" />
                <translate x="0.5" y="0.5" z="0" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <!-- Footers -->
        <component id="Footer1">
            <transformation>
                <scale x="20" y="0.5" z="0.1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="woodTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Cube" />
            </children>
        </component>

        <component id="Footer2">
            <transformation>
                <scale x="0.1" y="0.5" z="20" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="woodTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Cube" />
            </children>
        </component>

        <component id="Footer3">
            <transformation>
                <translate x="0" y="0" z="19.9" />
                <scale x="20" y="0.5" z="0.1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="woodTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Cube" />
            </children>
        </component>

        <component id="doorFooter1">
            <transformation>
                <translate x="19.9" y="0" z="0" />
                <scale x="0.1" y="0.5" z="13.4" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="woodTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Cube" />
            </children>
        </component> 

        <component id="doorFooter2">
            <transformation>
                <translate x="19.9" y="0" z="16.6" />
                <scale x="0.1" y="0.5" z="3.4" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="woodTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Cube" />
            </children>
        </component> 

        <component id="Door">
            <transformation>
                <translate x="19.4" y="0" z="15" />
                <scale x="1" y="4" z="3.2" /> 
                <translate x="0.5" y="1" z="0" />
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="moreDiffuse" />
            </materials>
            <texture id="doorTexture" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

    </components>

</lxs>